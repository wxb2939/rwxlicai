<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_getcode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_fragment_base_color">


    <include layout="@layout/include_titlebar"/>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/common_padding_top">

        <LinearLayout
            android:id="@+id/c1_apponitment"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/common_padding_top"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="手机"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:layout_weight="4"
                android:textColor="@color/color_middle_text"
                android:textSize="@dimen/common_text_middle" />

            <EditText
                android:id="@+id/etPhoneNum"
                style="?android:attr/textViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:inputType="phone|number"
                android:hint="请输入手机号"
                android:textColor="@color/color_middle_text"
                android:textSize="@dimen/common_text_middle" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@color/common_line_color" />

        <LinearLayout
            android:id="@+id/c1_password"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:layout_weight="4"
                android:textColor="@color/color_middle_text"
                android:textSize="@dimen/common_text_middle" />

            <EditText
                android:id="@+id/et_password"
                style="?android:attr/textViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/color_middle_text"
                android:textSize="@dimen/common_text_middle" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@color/common_line_color" />

        <LinearLayout
            android:id="@+id/c1_coupons"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/color_middle_text"
                android:textSize="@dimen/common_text_middle" />

            <EditText
                android:id="@+id/etCode"
                style="?android:attr/textViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:hint="请输入验证码"
                android:textColor="@color/color_middle_text" />

            <Button
                android:id="@+id/btnGetCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_weight="1"
                android:text="获取验证码"
                android:textColor="@color/color_deep_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

    <Button
        style="@style/CommButton"
        android:text="下 一 步"
        android:id="@+id/btn_sure" />

</LinearLayout>