<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_middle_margin"
        android:background="@drawable/writetogray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/e2_order_pic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/common_ten_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/c0_padding"
                android:paddingTop="15dp">
                <TextView
                    android:id="@+id/e2_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张月"
                    android:textColor="@color/color_deep_text"
                    android:textSize="@dimen/common_text_big" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/c0_padding"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间："
                    android:textColor="@color/color_middle_text"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/e2_order_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="12：30"
                    android:textColor="@color/color_middle_text"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/c0_padding"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约美疗师："
                    android:textColor="@color/color_middle_text"
                    android:textSize="@dimen/common_text_small" />

                <TextView
                    android:id="@+id/e2_order_waiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘雨灵"
                    android:textColor="@color/color_middle_text"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/e2_btn_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="未到店"
                    android:textSize="@dimen/common_text_small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>