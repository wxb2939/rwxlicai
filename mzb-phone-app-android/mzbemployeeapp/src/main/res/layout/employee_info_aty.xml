<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_fragment_base_color"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />


    <RelativeLayout
        android:id="@+id/emp_ground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/personLogin"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="@color/common_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        >


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            >
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/employee_img"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/employee_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_five_padding"
                                android:text="未绑定"
                                android:textColor="@color/color_deep_text"
                                android:textSize="@dimen/common_text_middle" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_ten_padding"
                            android:orientation="horizontal">

                            <TextView
                                style="?android:attr/textViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="职位:" />

                            <TextView
                                android:id="@+id/employee_roles"
                                style="?android:attr/textViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_ten_padding" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_padding_top"
                    android:background="@color/common_fragment_base_color" />

                <LinearLayout
                    android:id="@+id/self_check"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/e_check" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="门店当日服务查询" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/common_line_color" />

                <LinearLayout
                    android:id="@+id/self_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/e_query" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="预约查询" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/common_line_color" />

                <LinearLayout
                    android:id="@+id/self_previlige"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/e_score" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="满意度得分" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/common_line_color" />

                <LinearLayout
                    android:id="@+id/self_integral"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/e_statistic" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="业绩统计" />
                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/common_line_color" />

                <LinearLayout
                    android:id="@+id/self_manager"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/yg137" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="顾客137管理" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/e1_studyplat"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/common_padding_top"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/e_study" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="学习平台" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/common_line_color" />

                <LinearLayout
                    android:id="@+id/e1_storepurchase"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/e_purchase" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="门店采购" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/more_employee"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/common_padding_top"
                    android:background="@color/common_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/e_more" />

                    <TextView
                        style="?android:attr/textViewStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="更多" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>