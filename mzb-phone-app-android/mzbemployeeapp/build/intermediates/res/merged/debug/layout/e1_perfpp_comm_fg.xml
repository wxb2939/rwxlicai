<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_fragment_base_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/perf_titlebar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#951651"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/select_left"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/date_left" />


        <TextView
            android:id="@+id/select_title"
            style="@style/TextViewTitle"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="224dp" />

        <ImageView
            android:id="@+id/select_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/date_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/perf_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>


</LinearLayout>