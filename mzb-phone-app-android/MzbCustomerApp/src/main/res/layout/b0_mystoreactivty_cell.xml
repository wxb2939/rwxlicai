<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/common_white">

    <ImageView
        android:id="@+id/cell_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:layout_toRightOf="@+id/cell_img"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cell_text"
            android:layout_weight="1"
            style="@style/TextMiddleTitle"/>
        <TextView
            android:id="@+id/cell_text_two"
            android:layout_weight="1"
            style="@style/TextSmallTitle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/zeng_cu"
        android:layout_alignBottom="@id/cell_img"
        android:paddingBottom="10dp"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/detail_cu"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/goods_cu"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/detail_zeng"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/goods_zeng"
            android:visibility="gone"
            />


    </LinearLayout>

</RelativeLayout>