<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">


    <include
        layout="@layout/include_imgtext_cell"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/store_pp"/>

        <TextView
            android:id="@+id/brand_detail"
            style="@style/TextMiddleTitle"
            android:layout_weight="1"
            android:text="品牌详情" />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/common_gray"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/store_phone"/>
        <TextView
            android:id="@+id/store_phone"
            style="@style/TextMiddleTitle"
            android:layout_weight="1"
             />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/common_fragment_base_color"/>
    <LinearLayout
        android:id="@+id/entry_storelist"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/first_title"
            style="@style/TextMiddleTitle"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/common_fragment_base_color"/>
        <TextView
            android:id="@+id/second_title"
            style="@style/TextMiddleTitle"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/next_arrow" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/common_fragment_base_color"/>
</LinearLayout>